{
  "name": "ng2-hallelujah",
  "version": "0.4.1",
  "description": "Hallelujah! This Angular module offers a HAL/JSON http-client to easily interact with a Spring Data Rest API or any API that implements the Spring Data Rest resource model",
  "scripts": {
    "build:release": "npm run packagr && tar -zcvf ng2-hallelujah-0.m.p.tgz dist",
    "packagr": "ng-packagr -p ng-package.json",
    "prettier": "prettier --write \"**/*.{js,json,css,scss,less,md,ts,html,component.html}\"",
    "lint": "tslint src/**/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "Spring Data Rest",
    "Spring",
    "HAL",
    "hypermedia",
    "REST",
    "Angular 2"
  ],
  "author": "unibit",
  "contributors": [
    "cgatian"
  ],
  "maintainers": [
    "chrismarth",
    "pinksummit"
  ],
  "license": "MIT",
  "homepage": "https://github.com/pinksummit/HALlelujah",
  "issues": {
    "url": "https://pinksummit.atlassian.net/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pinksummit/HALlelujah"
  },
  "devDependencies": {
    "@angular/common": "^11.2.3",
    "@angular/compiler": "^11.2.3",
    "@angular/compiler-cli": "^11.2.3",
    "@angular/core": "^11.2.3",
    "codelyzer": "^6.0.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "ng-packagr": "^11.2.4",
    "prettier": "^2.2.1",
    "rxjs": "^6.6.6",
    "rxjs-tslint-rules": "^4.34.7",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~4.0.5",
    "zone.js": "~0.11.4"
  },
  "dependencies": {
    "tslib": "^2.1.0"
  },
  "peerDependencies": {
    "@angular/common": "^11.0.0",
    "@angular/core": "^11.0.0",
    "rxjs": "^6.6.0",
    "zone.js": "^0.10.3",
    "typescript": "~4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,less,md,ts,html,component.html}": [
      "prettier --write"
    ]
  }
}
